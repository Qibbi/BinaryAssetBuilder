					<Turret
						TurretNameKey="Bone_Turret"
						TurretPitch="Turret_Pitch"
						TurretID="1" />
				</ModelConditionState>
				<!-- BUILDING -->
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
